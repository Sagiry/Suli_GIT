@model WebApplication2.Models.RegisterViewModel
@{
    ViewBag.Title = "GIT - Register";
}
<div class="keret">
    <center>
        <h1>@ViewBag.Title</h1>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <p>Kérjük, töltse ki ezt az űrlapot a fiók létrehozásához.</p>
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FName, new { @class = "form-control", @placeholder = "Vezetékneved:" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LName, new { @class = "form-control", @placeholder = "Keresztneved:" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("StudentGender",
                    new SelectList(new string[] { "Ferfi", "No" }),
                    "Nemed:",
                    new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("BirthDate",
                        new SelectList(new string[] { "1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010" }),
                        "Sületési éved:",
                    new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LName, new { @class = "form-control", @placeholder = "OM-kódod:" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Gmail-emailcímed:" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Jelszavad:" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Jelszavad újra:" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>


        }

    </center>
</div>